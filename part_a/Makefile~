authenticate: authenticate.o io.o md5.o misc.o rand_utils.o sha1.o ui.o auth_file.o authenticate_common.o
	gcc -ansi -pedantic-errors -g -lm -o authenticate authenticate.o io.o md5.o misc.o rand_utils.o sha1.o ui.o auth_file.o authenticate_common.o

